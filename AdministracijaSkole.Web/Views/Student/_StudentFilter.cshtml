@using AdministracijaSkole.Web.Models

@model StudentFilterModel

<form id="searchForm">
	<div class="row">
		<div class="col">
			<input asp-for="FullName" class="form-control" type="text" placeholder="Full name" />
		</div>
		<div class="col">
			<input asp-for="Class" class="form-control" type="text" placeholder="Class" />
		</div>
		<div class="col">
			<input asp-for="Address" class="form-control" type="text" placeholder="Address" />
		</div>
		<div class="col">
			<input asp-for="Email" class="form-control" type="text" placeholder="Email" />
		</div>
		<div class="col">
			<button type="submit" class="btn btn-outline-info">Search</button>
			<a asp-action="Create" class="btn btn-success" style="margin-left: 10px">Add new</a>
		</div>
	</div>
</form>